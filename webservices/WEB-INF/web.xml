<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>Openl Web Service</display-name>

	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Servlets -->
	<servlet>
		<servlet-name>WSServlet</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
		<init-param>
			<param-name>redirects-list</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>redirect-servlet-name</param-name>
			<param-value>index.jsp</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- JSPs -->
	<servlet>
		<servlet-name>index.jsp</servlet-name>
		<jsp-file>/index.jsp</jsp-file>
	</servlet>
	<!-- Mapping -->
	<servlet-mapping>
		<servlet-name>WSServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>index.jsp</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<!-- Other stuff -->
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>5000</param-value> <!-- every 5 seconds -->
	</context-param>
	<context-param>
		<description>Load default and application properties to the Spring application environment.</description>
		<param-name>contextInitializerClasses</param-name>
		<param-value>org.openl.spring.env.PropertySourcesLoader</param-value>
	</context-param>
	<context-param>
		<description>Location of the XML file that defines the root application context applied by ContextLoaderListener.</description>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:openl-ruleservice-beans.xml classpath:openl-ruleservice-logging-beans.xml classpath:openl-ruleservice-override-beans.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

</web-app>
